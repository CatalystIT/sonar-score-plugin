<div class = "widget-content">
	<div class="dashbox" style="float:left">
		<!-- The uploaded project image/icon gets displayed here and if the project does not have an image/icon then the default image/icon is displayed -->
		<p>
			<span class="big" id="score_image"> <img id="project_image"
				style="height: 100px; max-width: 150px"
				src="/images/display?project_id=<%=@project.id -%>"
				onerror="this.src='/images/profiles/projects/default.png'" />
			</span>
		</p>
	</div>
	<div id="score_table_1" style="word-wrap: break-word; float:left">	
		<!-- Displays project name -->
		<h1><%=@project.long_name -%></h1>	
		<% points=measure('points') %>
		<% if ( points ) %>
		<div id="score_points">
			<p
				style="a .color: #994411; font-family: Comic Sans MS; font-size: 1.5em; font-weight: bold">
				<!-- Displays points -->
				<span id="score_points"> <%=format_measure('points', :suffix => ' Points ', :url =>url_for_drilldown('points'))-%>
				</span>
			</p>
		</div>
		<% end %>
	</div>
</div>
